<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/closeporfile"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Dashboard"
            android:textColor="@color/dark"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_account" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:text="Tap once to send geolocation."
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/action" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="0dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_photo"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/microphone"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_video"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/picsent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="invisible"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dot"/>
        <ImageView
            android:id="@+id/voicesent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="invisible"
            android:layout_marginStart="35dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dot"/>
        <ImageView
            android:id="@+id/videosent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="invisible"
            android:layout_marginStart="55dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dot"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="316dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:text="Tap to start new report."
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/history"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/refresh" />
    </RelativeLayout>

</LinearLayout>