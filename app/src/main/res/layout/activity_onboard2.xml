<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".onboard2">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:background="@drawable/onboard_background"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="240dp"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"
            android:src="@drawable/video" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="216dp"
        android:layout_height="63dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_semibold"
            android:lineHeight="32dp"
            android:text="Send Video &amp; Picture"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="normal" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="216dp"
        android:layout_height="93dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Add a video and a picture when reporting an emergency with ease."
            android:textAlignment="center"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="20dp">


        <ImageView
            android:layout_width="15dp"
            android:layout_height="7dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/onboard_inactive"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="7dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/onboard_active"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="7dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/onboard_inactive"/>
    </LinearLayout>
    <Button
        android:id="@+id/onboard1"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:onClick="next2"
        android:layout_gravity="center"
        android:background="@drawable/button_primary"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:text="Next"
        android:textAllCaps="false"/>


</LinearLayout>